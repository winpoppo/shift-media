---
interface Props {
  title: string;
  description: string;
  ogImage?: string;
  canonicalURL?: string;
  type?: 'website' | 'article';
  pubDate?: Date;
  updatedDate?: Date;
}

const {
  title,
  description,
  ogImage = '/og-default.png',
  canonicalURL = Astro.url.href,
  type = 'website',
  pubDate,
  updatedDate,
} = Astro.props;

const siteName = 'SHIFT - 就活メディア';
const fullTitle = title === siteName ? title : `${title} | ${siteName}`;
---

<!-- Primary Meta Tags -->
<title>{fullTitle}</title>
<meta name="description" content={description} />
<meta name="author" content="SHIFT編集部" />
<link rel="canonical" href={canonicalURL} />

<!-- Open Graph -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(ogImage, Astro.site).href} />
<meta property="og:site_name" content={siteName} />
<meta property="og:locale" content="ja_JP" />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={fullTitle} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={new URL(ogImage, Astro.site).href} />

{pubDate && <meta property="article:published_time" content={pubDate.toISOString()} />}
{updatedDate && <meta property="article:modified_time" content={updatedDate.toISOString()} />}
